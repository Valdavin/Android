<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="m4104c.tp2.Exercice5Activity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="5sp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/MainMenu_User_Layout">

        <ImageView
            android:id="@+id/MainMenu_User_Image"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:src="@drawable/avatar_anonymous"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/MainMenu_User_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anonymousse"
                android:textSize="40sp"
                android:gravity="center" />
            <TextView
                android:id="@+id/MainMenu_User_Score"
                android:layout_marginTop="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Score = 20"
                android:gravity="center"
                android:textSize="25sp"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Exercices de Math"
            android:textSize="20sp"
            android:onClick="main_math"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Question"
            android:textSize="20sp"
            android:onClick="main_question"/>
    </LinearLayout>


</LinearLayout>